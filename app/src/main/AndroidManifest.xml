<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tutorials.joseph.spaceinvaders">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppFullScreenTheme"
        android:screenOrientation="portrait"
        android:name="com.orm.SugarApp">
        <activity
            android:name="com.spaceinvaders.TitleScreenActivity"
            android:theme="@style/AppFullScreenTheme"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.spaceinvaders.SpaceInvadersActivity"></activity>
        <activity android:name="com.spaceinvaders.OptionsMenuActivity"></activity>
        <activity android:name="com.spaceinvaders.ScoreboardActivity"></activity>
    </application>

</manifest>
